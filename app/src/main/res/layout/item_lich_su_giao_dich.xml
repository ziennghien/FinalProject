<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="true"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thời gian giao dịch -->
        <TextView
            android:id="@+id/tvThoiGian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30 - 20/05/2025"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#333333" />

        <!-- Thông tin giao dịch -->
        <TextView
            android:id="@+id/tvThongTinGiaoDich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="VCB 123456789 +5,000,000 lúc 12:30 - 20/05/2025, số dư còn 10,000,000"
            android:textSize="14sp"
            android:textColor="#000000" />

        <!-- Dòng chuyển khoản từ - đến -->
        <TextView
            android:id="@+id/tvNguonDich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ACB 987654321 đến VCB 123456789"
            android:textSize="13sp"
            android:textColor="#666666" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
